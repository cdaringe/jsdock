{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "program": "${workspaceRoot}/src/index.js"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "build",
        "program": "${workspaceRoot}/bin/cli.js",
        "args": [
          "build"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "publish",
        "program": "${workspaceRoot}/bin/cli.js",
        "args": [
          "publish"
        ]
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run AVA test",
        "program": "${workspaceRoot}/node_modules/ava/profile.js",
        "args": [
          "${file}"
        ]
      }
    ]
  }
